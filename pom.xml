        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
<!--        <tycho.scmUrl>scm:git:https://github.com/rational-insights/https://github.com/aldanchenko/knime-rational-insights-plugin.git.git</tycho.scmUrl>-->
        <sonar.host.url>https://sonarcloud.io</sonar.host.url>
        <sonar.organization>rational-insights</sonar.organization>
		<target.file>KNIME-AP-4.0</target.file>
    </properties>
